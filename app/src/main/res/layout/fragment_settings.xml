<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Control Sensitivity -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting_control_sensitivity"
            android:textStyle="bold" />

        <SeekBar
            android:id="@+id/seekbarControlSensitivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100" />

        <TextView
            android:id="@+id/textControlSensitivityValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Zoom Sensitivity -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Zoom Sensitivity"
            android:textStyle="bold" />

        <SeekBar
            android:id="@+id/seekbarZoomSensitivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100" />

        <TextView
            android:id="@+id/textZoomSensitivityValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Stream Quality -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/setting_stream_quality"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/radioGroupStreamQuality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radioLowQuality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Low" />

            <RadioButton
                android:id="@+id/radioMediumQuality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium" />

            <RadioButton
                android:id="@+id/radioHighQuality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="High" />
        </RadioGroup>

        <!-- Dark Mode -->
        <Switch
            android:id="@+id/switchDarkMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/setting_dark_mode" />

        <!-- Keep Screen On -->
        <Switch
            android:id="@+id/switchKeepScreenOn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/setting_keep_screen_on" />

        <!-- Hide Controls -->
        <Switch
            android:id="@+id/switchHideControls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Hide Controls" />

        <!-- App Version -->
        <TextView
            android:id="@+id/textAppVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp" />

    </LinearLayout>
</ScrollView>