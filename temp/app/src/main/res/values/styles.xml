<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Text styles -->
    <style name="TextAppearance.PTZCameraController.Title" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="TextAppearance.PTZCameraController.Subtitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.PTZCameraController.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.PTZCameraController.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Button styles -->
    <style name="Widget.PTZCameraController.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="Widget.PTZCameraController.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeColor">@color/primary</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="Widget.PTZCameraController.Button.IconButton" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Switch style -->
    <style name="Widget.PTZCameraController.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="thumbTint">@color/primary</item>
        <item name="trackTint">@color/primary_variant</item>
    </style>

    <!-- Seek bar style -->
    <style name="Widget.PTZCameraController.SeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressTint">@color/primary</item>
        <item name="android:thumbTint">@color/primary</item>
    </style>

    <!-- Card style -->
    <style name="Widget.PTZCameraController.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
</resources>